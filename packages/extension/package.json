{
  "name": "@signer/extension",
  "version": "0.1.0",
  "description": "MyCrypto Signer browser extension",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config ./webpack/development.ts",
    "watch": "yarn build --watch",
    "lint": "yarn lint:types && yarn lint:source && yarn lint:format",
    "lint:types": "yarn tsc --noEmit",
    "lint:source": "eslint . --ignore-path ../../.gitignore --ext .ts,.js,.tsx,.jsx",
    "lint:source:fix": "yarn workspaces foreach -pt run lint:source:fix",
    "lint:format": "prettier --check --ignore-path ../../.gitignore \"**/*.{js,jsx,ts,tsx,json,yml,html}\"",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{js,jsx,ts,tsx,json,yml,html}\""
  },
  "devDependencies": {
    "@types/chrome": "0.0.145",
    "@types/uuid": "8.3.0",
    "@types/webpack": "5.28.0",
    "babel-loader": "8.2.2",
    "html-webpack-plugin": "5.3.1",
    "ts-node": "10.0.0",
    "tsconfig-paths-webpack-plugin": "3.5.1",
    "typescript": "4.3.2",
    "webpack": "5.38.1",
    "webpack-cli": "4.7.2",
    "webpack-merge": "5.8.0",
    "webpackbar": "5.0.0-3"
  },
  "dependencies": {
    "@reduxjs/toolkit": "1.6.0",
    "@signer/common": "workspace:packages/common",
    "buffer": "6.0.3",
    "crypto-browserify": "3.12.0",
    "fast-json-stable-stringify": "2.1.0",
    "noble-ed25519": "1.2.5",
    "redux": "4.1.0",
    "redux-saga": "1.1.3",
    "stream-browserify": "3.0.0",
    "superstruct": "0.15.2",
    "uuid": "8.3.2"
  }
}
