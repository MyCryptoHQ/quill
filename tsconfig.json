{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules"],
      "@signer/*": ["packages/*/src"]
    }
  },
  "exclude": ["node_modules"]
}
