{
  "name": "signer",
  "productName": "signer",
  "version": "1.0.0",
  "description": "",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint --ignore-path .gitignore .",
    "lint:eslint:fix": "yarn lint:eslint --fix",
    "lint:prettier": "prettier --check --ignore-path .gitignore '**/*.{js,jsx,ts,tsx,json}'",
    "format": "prettier --ignore-path .gitignore --write '**/*.{js,jsx,ts,tsx,json}'",
    "tsc": "tsc -p ./tsconfig.json",
    "validate": "npm-run-all --parallel lint tsc",
    "test:coverage": "yarn test --coverage",
    "test": "jest --config=jest_config/jest.config.json --maxWorkers=2"
  },
  "keywords": [],
  "repository": "https://github.com/MyCryptoHQ/signer.git",
  "author": "MyCryptoHQ",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "signer"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "port": 3001,
            "mainConfig": "./webpack_config/main.js",
            "renderer": {
              "config": "./webpack_config/renderer.js",
              "entryPoints": [
                {
                  "html": "./src/app/index.html",
                  "js": "./src/app/index.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@electron-forge/cli": "6.0.0-beta.53",
    "@electron-forge/maker-deb": "6.0.0-beta.53",
    "@electron-forge/maker-rpm": "6.0.0-beta.53",
    "@electron-forge/maker-squirrel": "6.0.0-beta.53",
    "@electron-forge/maker-zip": "6.0.0-beta.53",
    "@electron-forge/plugin-webpack": "6.0.0-beta.53",
    "@marshallofsound/webpack-asset-relocator-loader": "0.5.0",
    "@types/jest": "26.0.14",
    "@types/react": "16.9.49",
    "@types/react-dom": "16.9.8",
    "@types/ws": "7.2.6",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "babel-jest": "26.3.0",
    "css-loader": "4.2.1",
    "electron": "10.1.1",
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "24.0.2",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.2",
    "eslint-plugin-react-hooks": "4.1.2",
    "fork-ts-checker-webpack-plugin": "5.0.14",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "lint-staged": "10.4.0",
    "node-loader": "1.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.1",
    "style-loader": "1.2.1",
    "ts-loader": "8.0.2",
    "tsconfig-paths-webpack-plugin": "3.3.0",
    "typescript": "4.0.2",
    "webpack-merge": "5.1.4"
  },
  "dependencies": {
    "@ethersproject/abstract-provider": "5.0.3",
    "@ethersproject/wallet": "5.0.4",
    "@exodus/schemasafe": "1.0.0-rc.2",
    "@hot-loader/react-dom": "16.13.0",
    "electron-squirrel-startup": "1.0.0",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-hot-loader": "4.12.21",
    "ws": "7.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn tsc",
      "pre-push": "yarn test"
    }
  }
}
