{
  "scripts": {
    "start": "yarn build && concurrently --raw -k \"yarn workspaces foreach -i --include signer run start\" \"yarn watch\"",
    "package": "yarn build && yarn workspaces foreach -i --include signer run package",
    "make": "yarn build && yarn workspaces foreach -i --include signer run make",
    "publish": "yarn build && yarn workspaces foreach -i --include signer run publish",
    "build": "yarn workspaces foreach -i run build",
    "watch": "yarn workspaces foreach -i run watch",
    "lint": "yarn lint:types && yarn lint:source && yarn lint:format && yarn lint:styles",
    "lint:types": "yarn workspaces foreach -pt run lint:types",
    "lint:source": "yarn workspaces foreach -pt run lint:source",
    "lint:source:fix": "yarn workspaces foreach -pt run lint:source:fix",
    "lint:format": "prettier --check --ignore-path .gitignore \"**/*.{js,jsx,ts,tsx,json,yml}\"",
    "lint:styles": "stylelint packages/**/*.tsx",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{js,jsx,ts,tsx,json,yml}\"",
    "tsc": "tsc --noEmit",
    "test": "jest --testPathIgnorePatterns e2e",
    "test:coverage": "yarn test --coverage",
    "test:e2e": "yarn package && cross-env IS_TEST=true jest packages/signer/tests/e2e"
  },
  "repository": "https://github.com/MyCryptoHQ/signer.git",
  "author": "MyCryptoHQ",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "yarn lint:styles"
    ],
    "*.{json,yml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint:types",
      "pre-push": "yarn test"
    }
  },
  "resolutions": {
    "node-abi": "2.26.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.13.8",
    "@babel/plugin-proposal-optional-chaining": "7.13.12",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "7.10.4",
    "@types/jest": "26.0.23",
    "@typescript-eslint/eslint-plugin": "4.1.0",
    "@typescript-eslint/parser": "4.1.0",
    "babel-jest": "26.3.0",
    "concurrently": "6.2.0",
    "cross-env": "7.0.3",
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "24.0.2",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.2",
    "eslint-plugin-react-hooks": "4.1.2",
    "husky": "4.2.5",
    "jest": "27.0.4",
    "jest-mock-random": "1.1.1",
    "lint-staged": "11.0.0",
    "prettier": "2.1.1",
    "stylelint": "13.13.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "typescript": "4.0.2"
  }
}
